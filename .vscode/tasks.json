{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "gcc",
        "command": "/usr/bin/gcc",
        "args": [
          "-Wall",
          "-lm",
          "-std=c11",
          "-g",
          "*.c",
          "-o",
          "${workspaceFolder}/pagerank"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": ["$gcc"]
      }
    ]
  }